<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="/css/bootstrap.min.css">
            <link rel="stylesheet" href="/fullcalendar/lib/main.min.css">
            <link rel="stylesheet" href="/menu_vertical_css.css">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
            <link rel="stylesheet" href="/fullcalendar/lib/main.min.css">
        {% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="/js/bootstrap.min.js"></script>
            <script src="/menu_vertical_js.js"></script>
            <script src="/fullcalendar/lib/main.min.js"></script>
        {% endblock %}
    </head>
    <body id="body-pd">
        <header class="header" id="header">
            <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
            <div class="header_img"> <img src="https://i.imgur.com/hczKIze.jpg" alt=""> </div>
            {% block header %}{% endblock %}
        </header>
        <div class="l-navbar" id="nav-bar">
            <nav class="nav">
                <div> <a href="/calendrier/tous" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span class="nav_logo-name">Gestion de Location</span> </a>
                    <div class="nav_list"> 
                        <a href="/calendrier/tous" class="nav_link active"><i class='bx bx-grid-alt nav_icon'></i><span class="nav_name">Dashboard</span></a>
                        <a href="/calendrier/tous" class="nav_link"><i class='bx bx-calendar nav_icon'></i><span class="nav_name">Calendrier</span></a>
                        <a href="/reservation" class="nav_link"><i class='bx bx-message-square-detail nav_icon'></i> <span class="nav_name">Réservation</span></a>
                        <a href="/logement" class="nav_link"><i class='bx bx-building nav_icon'></i><span class="nav_name">Logement</span></a>
                        <a href="/locataire" class="nav_link"><i class='bx bx-user nav_icon'></i><span class="nav_name">Locataire</span></a>
                        <a href="/historique" class="nav_link"><i class='bx bx-archive nav_icon'></i><span class="nav_name">Historique</span></a>
                        <a href="/parametre" class="nav_link"><i class='bx bx-arrows-fullscreen nav_icon'></i><span class="nav_name">Paramètre</span></a>
                    </div>
                </div> <a href="/deconnexion" class="nav_link"><i class='bx bx-log-out nav_icon'></i><span class="nav_name">Deconnexion</span></a>
            </nav>
        </div>
        <div class="height-100 bg-light">
            {% block body %}{% endblock %}
        </div>
    </body>
    {% block footer %}{% endblock %}
    
</html>
