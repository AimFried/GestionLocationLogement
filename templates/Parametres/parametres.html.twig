{% extends 'base.html.twig' %}

{% block title %}Paramètres{% endblock %}

{% block body %}
<div class="container-fluid">
        <div class="row">
        <div class="col-md-12">
        <center><h1>Paramètres</h1>
        <hr style="width: 20%;">
        <p>Gestion Location | <a href="https://github.com/AimFried/GestionLocationLogement">1.0</a> <p></center>
        </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><center>Liste des utilisateurs</center></h3>                  
                        <center>
                            <select id="listeUtilisateur" class="form-select" size="5" aria-label="size 3 select example">
                                    {% for unUtilisateur in utilisateurs %}
                                    <option onClick="window.location.replace('{{path('utilisateur_profile', {id:unUtilisateur.id})}}');">{{unUtilisateur.email}}</option>
                                    
                                    {% endfor %}
                            </select>
                        </center> 
                        <br>
                        <center>
                            <button type="button" class="btn btn-outline-primary"><a href="{{path('utilisateur_ajouter')}}">Ajouter</a></button>
                        </center>                  
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Prochainement !</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}