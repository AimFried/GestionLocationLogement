{% extends 'base.html.twig' %}

{% block title %}Réservation | Supprimer{% endblock %}

{% block body %}
<div style="margin-top: 80px;">
    <div class="container-fluid">
	<div class="row">
    <center><h2>Supprimer une réservation</h2><center><br><br>
    {{ form_start(form) }}
		<div class="col-md-1">
		</div>
		<div class="col-md-10">
			<div class="row">
				<div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Information générale</h5>
                            <hr>
                            <table style="width: 100%;">
                                <tr>
                                    <th style="width: 40%;padding-right: 5%;">
                                        <center>{{form_row(form.Locataires)}}</center>
                                    </th>
                                    <th style="width: 40%;">
                                        <center>{{form_row(form.Logements)}}</center>
                                    </th>
                                </tr>
                            </table>
                            <br>
                            <table>
                                <tr>
                                    <th style="width: 10%;padding-right: 5%;">
                                        {{form_row(form.EtatContrat)}}
                                    </th>
                                </tr>
                            </table>
                            <hr>
                            <center>
                            <table>
                                <tr>
                                    <th style="width: 20%;padding-right: 5%;">
                                        <center>
                                            <h6 class="card-subtitle mb-2 text-muted">Quantitée(s)</h6>
                                            {{form_row(form.NbrAdulte)}}
                                            {{form_row(form.NbrEnfant)}}
                                        </center>
                                    </th>
                                    <th style="width: 40%;padding-right: 5%;">
                                        <center>
                                            <h6 class="card-subtitle mb-2 text-muted">Prix(s)</h6>
                                            {{form_row(form.PrixNuit)}}
                                            <br>
                                            {{form_row(form.TaxeVariable)}}
                                        </center>
                                    </th>
                                    <th style="width: 20%;padding-right: 5%;">
                                        <center>
                                            <h6 class="card-subtitle mb-2 text-muted">Couleur</h6>
                                            {{form_row(form.CouleurFond)}}
                                            {{form_row(form.CouleurBordure)}}
                                            {{form_row(form.CouleurTexte)}}
                                        </center>
                                    </th>
                                </tr>
                            </table>
                            </center>
                            <br>
                            <hr>
                            <br>
                            <center><h6 class="card-subtitle mb-2 text-muted">Description</h6></center>
                            {{form_row(form.Description)}}
                        </div>
                    </div>       
                                
                 

				</div>
				<div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Période</h5>
                            <hr>
                                <center><h6 class="card-subtitle mb-2 text-muted">Début</h6></center>
                                {{form_row(form.DateDebut)}}
                                <br>
                                <center><h6 class="card-subtitle mb-2 text-muted">Fin</h6></center>
                                {{form_row(form.DateFin)}}
                            <br>
                            <hr>
                            <br>
                            <div class="btn-group" role="group" aria-label="Basic outlined example">
								<button type="submit" class="btn btn-outline-primary">Supprimer</button>
								<button type="button" class="btn btn-outline-primary"><a href="{{path('reservation_profile', {id:reservation.id})}}">Annuler</a></button>
                                {{ form_end(form) }} 
							</div>
                        </div>
                    </div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-8">

				</div>
				<div class="col-md-4">

				</div>
			</div>
		</div>
		<div class="col-md-1">
		</div>
	</div>
</div>
{% endblock %}