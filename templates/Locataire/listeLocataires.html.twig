{% extends 'base.html.twig' %}

{# Compte le nombres de locataires #}
{% set nbrLocataires = 0 %}
{% for unLocataire in locataires %}
	{% set nbrLocataires = nbrLocataires + 1 %}
{% endfor %}

{% block title %}Liste des locataire(s){% endblock %}

{% block header %}
	<center><h3>{{nbrLocataires}} locataire(s)</h3></center>
{% endblock %}

{% block body %}
    <div class="row">
		<div class="col-md-12">
			<center><h2>Liste de locataire(s)</h2></center>
			<table class="table table-striped">
				<thead>
					<tr>
						<th style="width: 15%;"><strong>Nom</strong></th>
						<th style="width: 15%;"><strong>Prenom</strong></th>
						<th style="width: 10%;"><strong>Telephone</strong></th>
						<th style="width: auto;"><strong>Email</strong></th>
						<th style="width: 10%;"><strong>Derni√®re location</strong></th>
						<th style="width: 5%;"></th>
					</tr>
				</thead>
				<tbody>
				{# Afficher tous les locataires #}
				{% for unLocataires in locataires %}
					<tr>
						<th scope="row">{{unLocataires.Nom}}</th>
						<th scope="row">{{unLocataires.Prenom}}</th>
						<th scope="row">{{unLocataires.Telephone}}</th>
						<th scope="row">{{unLocataires.Email}}</th>
						{# Variables etat #}
						{% set lastLocEtat = false %}
						{% set lastLoc = 0 %}

						{% for uneReservations in reservations %}

							{% if uneReservations.locataires.id == unLocataires.id %}

								{% if lastLoc == 0 %}
								<th scope="row">{{uneReservations.DateDebut|date("m/d/Y")}}</th>
								{% set lastLocEtat = lastLocEtat + 1 %}
								{% endif %}

							{% set lastLocEtat = true %}

							{% endif %}

						{% endfor %}

						{% if lastLocEtat == false %}
							<th scope="row"></th>	
						{% endif %}		

						<th scope="row">
							<center>
								<div class="btn-group" role="group" aria-label="Basic outlined example">
									<button type="button" class="btn btn-outline-primary"><a href="{{path('locataire_profile', {id:unLocataires.id})}}">Voir</a></button>
								</div>
							</center>
						</th>
					</tr>
				{% endfor %}
					{% if nbrLocataires == 0 %}
						<center><p>Aucun locataire !</p></center>
					{% endif %}
				</tbody>
			</table>
			<center>
				<div class="btn-group" role="group" aria-label="Basic outlined example">
					<button type="button" class="btn btn-outline-primary"><a href="{{path('locataire_ajouter')}}">Ajouter</a></button>
				</div>
			</center>
		</div>
	</div>
{% endblock %}
