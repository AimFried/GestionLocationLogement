{% extends 'base.html.twig' %}

{% block title %}Locataire | Profile{% endblock %}

{% block body %}
<div style="margin-top: 80px;">
    <div class="container-fluid">
	<div class="row">
    <center><h2>Locataire : {{locataire.Nom}}</h2><center><br><br
		<div class="col-md-1">
		</div>
		<div class="col-md-11">
			<div class="row">
				<div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <center><h5 class="card-title">Information générale</h5></center>
                            <hr>
                            <table style="width: 100%;">
                                <tr>
                                    <th style="width: 40%;padding-right: 5%;">
										<h6 class="card-subtitle mb-2 text-muted">Nom</h6>
                                        <center><input class="form-control form-control-sm" type="text" value="{{locataire.Nom}}" aria-label="Disabled input example" disabled readonly></center>
                                    </th>
                                    <th style="width: 40%;">
                                        <h6 class="card-subtitle mb-2 text-muted">Pernom</h6>
                                        <center><input class="form-control form-control-sm" type="text" value="{{locataire.Prenom}}" aria-label="Disabled input example" disabled readonly></center>
                                    </th>
                                </tr>
                            </table>
                            <br>
                            <hr>
                            <br>
                            <center><h6 class="card-subtitle mb-2 text-muted">Dernière(s) réservation(s)</h6></center>
							<table class="table table-striped">
									<thead>
										<tr>
											<th>Locataire</th>
											<th>Debut</th>
											<th>Fin</th>
											<th>Adulte(s)</th>
											<th>Enfant(s)</th>
											<th>Prix de la Nuit</th>
											<th>Taxe Variables</th>
											<th>Prix Total</th>
										</tr>
									</thead>
									<tbody>
                                    {% for uneReservation in locataire.Reservations %}
									<tr>
										<th scope="row"><a href="{{path('logement_profile',{id:uneReservation.Logements.id})}}">{{uneReservation.Logements.Nom}}</a></th>
										<th scope="row">{{uneReservation.DateDebut|date("m/d/Y")}}</th>
										<th scope="row">{{uneReservation.DateFin|date("m/d/Y")}}</th>
										<th scope="row">{{uneReservation.NbrAdulte}}</th>
										<th scope="row">{{uneReservation.NbrEnfant}}</th>
										<th scope="row">{{uneReservation.PrixNuit}} €</th>
										<th scope="row">{{uneReservation.TaxeVariable}} €</th>
										<th scope="row">{{uneReservation.PrixTotal}} €</th>
									</tr>
								{% endfor %}
							</table>
                        </div>
                    </div>               
				</div>
				<div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Coordonnées</h5>
                            <hr>
							<br>
								<table>
									<tr>
										<th style="width: 60%;">
											<h6 class="card-subtitle mb-2 text-muted">Email</h6>
											<center><input class="form-control form-control-sm" type="text" value="{{locataire.Email}}" aria-label="Disabled input example" disabled readonly></center>
										</th>
										<th>
											<h6 class="card-subtitle mb-2 text-muted">Téléphone</h6>
                                			<center><input class="form-control form-control-sm" type="text" value="{{locataire.Telephone}}" aria-label="Disabled input example" disabled readonly></center>
										</th>
									</tr>
                                </table>
                                <br>
                                <table>
                                    <tr>
										<th style="width: 75%;">
											<h6 class="card-subtitle mb-2 text-muted">Adresse</h6>
											<center><input class="form-control form-control-sm" type="text" value="{{locataire.Adresse}}" aria-label="Disabled input example" disabled readonly></center>
										</th>
										<th>
											<h6 class="card-subtitle mb-2 text-muted">Code postal</h6>
                                			<center><input class="form-control form-control-sm" type="text" value="{{locataire.CodePostal}}" aria-label="Disabled input example" disabled readonly></center>
										</th>
									</tr>
								</table>
							<br>
                        </div>
                    </div>
					<br>
					<div class="card">
                        <div class="card-body">
							<center>
                            <div class="btn-group" role="group" aria-label="Basic outlined example">
								<button type="button" class="btn btn-outline-primary"><a href="{{path('locataire_modifier', {id:locataire.id})}}">Modifier</a></button>
								<button type="button" class="btn btn-outline-primary"><a href="{{path('locataire_supprimer', {id:locataire.id})}}">Supprimer</a></button>
							</div>
							<div style="margin-left: 20px;"class="btn-group" role="group" aria-label="Basic outlined example">
								<button type="button" class="btn btn-outline-primary"><a href="{{path('locataire')}}">Retour</a></button>
							</div>
							</center>
                        </div>
                    </div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-8">

				</div>
				<div class="col-md-4">

				</div>
			</div>
		</div>
	</div>
</div>				
{% endblock %}
